<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fm_run_bg"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton 
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>
        <TextView 
            android:id="@+id/one_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/return_button"
            android:text="name"
            android:textColor="#ffffff"/>
        <TextView 
            android:id="@+id/one_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/return_button"
            android:layout_alignBottom="@id/return_button"
            android:text="author"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/sing_layout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:clickable="true">
        <ImageView 
            android:id="@+id/disk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/placeholder_disk_play_program"
            android:src="@drawable/play_disc"/>

        <ImageView
            android:id="@+id/pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/disk"
            android:layout_marginRight="30dp"
            android:src="@drawable/play_needle" />

    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton 
            android:id="@+id/play_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/play_icn_love"/>
        <ImageButton 
            android:id="@+id/play_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@id/play_love"
            android:src="@drawable/play_icn_loop"/>
        <ImageButton 
            android:id="@+id/play_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/play_way"
            android:layout_alignTop="@id/play_love"
            android:src="@drawable/desk_pre"/>
        <ImageButton 
            android:id="@+id/play_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/play_last"
            android:layout_alignTop="@id/play_love"
            android:src="@drawable/desk_play"/>
        <ImageButton 
            android:id="@+id/play_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/play_start"
            android:layout_alignTop="@id/play_love"
            android:src="@drawable/desk_next"/>
        <TextView 
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_above="@id/play_love"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="0"/>
        <TextView 
            android:id="@+id/all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_above="@id/play_love"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="0"/>
        <SeekBar 
            android:id="@+id/seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/current_time"
            android:layout_above="@id/play_love"/>
    </RelativeLayout>
    
    

</LinearLayout>
